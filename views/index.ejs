<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/index.css">
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <!-- light mode google icon -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- dark mode google icon -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>HODLINFO</title>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-cust navbar-expand-lg" style="background-color: #000000;">
        <div class="container-fluid">
            <a class="navbar-logo site-name" href="#">HODLINFO</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav navbar-middle">
                    <li class="nav-item">
                        <a class="navbar-button" href="#">INR</a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-button">BTC</a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-button">Buy BTC</a>
                    </li>
                </ul>
                <ul class="navbar-nav navbar-end">
                    <!-- <li class="nav-item">
                        <div class="navbar-progress"></div>
                    </li> -->
                    <li class="nav-item">
                        <a class="navbar-button-contact">Contact Us</a>
                    </li>
                    <li class="nav-item theme-toggle-align">
                        <label class="custom-control teleport-switch">
                            <span class="teleport-switch-control-description material-symbols-outlined">
                                light_mode
                            </span>
                            <input type="checkbox" class="teleport-switch-control-input" checked="">
                            <span class="teleport-switch-control-indicator"></span>
                            <span class="teleport-switch-control-description material-symbols-outlined">
                                dark_mode
                            </span>
                        </label>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- center details container -->
    <div class="details-container">
        <div class="d-flex justify-content-around align-items-center small-header">
            <div class="text-center">
                <div class="small-header-percentage">0.38 %</div>
                <div class="small-header-time">5 Mins</div>
            </div>
            <div class="text-center center-div">
                <div class="small-header-percentage">1.09 %</div>
                <div class="small-header-time">1 Hour</div>
            </div>
            <div class="text-center center-block">
                <div class="center-text">
                    <span class="subText-heading">Best Price to Trade</span>
                </div>
                <div class="amount">₹ <%= (data[0].high + data[0].low)/ 2%>
                </div>
                <div class="center-text">Average <%= data[0].name%> net price including commission</div>
            </div>
            <div class="text-center">
                <div class="small-header-percentage">5.51 %</div>
                <div class="small-header-time">1 Day</div>
            </div>
            <div class="text-center">
                <div class="small-header-percentage">12.73 %</div>
                <div class="small-header-time">7 Days</div>
            </div>
        </div>
    </div>


    <!-- table  -->
    <table class="table-alter">
        <thead>
            <tr>
                <th scope="col" class="text-center">Base Unit</th>
                <th scope="col" class="text-center">Name</th>
                <th scope="col" class="text-center">Last Traded Price</th>
                <th scope="col" class="text-center">
                    <sup>Buy</sup><br>
                    <sub>Sell Price</sub>
                </th>
                <th scope="col" class="text-center">Volume</th>
                <th scope="col" class="text-center">Open</th>
                <th scope="col" class="text-center">
                    <sup>High</sup><br>
                    <sub>Low</sub>
                </th>
                <th scope="col" class="text-center">Trade Time</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <% data.forEach(function(doc) { %>
            <tr>
                <td class="text-center">
                    <%= doc.baseUnit %>
                </td>
                <td class="text-center">
                    <%= doc.name %>
                </td>
                <td class="text-center">₹ <%= doc.last %>
                </td>
                <td class="text-center">
                    <sup class="positive">₹ <%= doc.buy %></sup><br>
                    <sub class="negative">₹ <%= doc.sell %></sub>
                </td>
                <td class="text-center">
                    <%= doc.volume %>
                </td>
                <td class="text-center">
                    <%= doc.open %>
                </td>
                <td class="text-center">
                    <sup class="positive">₹ <%= doc.high %></sup><br>
                    <sub class="negative">₹ <%= doc.low %></sub>
                </td>
                <td class="text-center">
                    <%= doc.tradeTime %>
                </td>
            </tr>
            <% }); %>
                </tr>
        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
</body>

</html>